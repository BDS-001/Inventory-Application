<div class="filter-section">
    <form class="filter-container" method="GET" action="/">
        <label for="filterType">Filter By:</label>
        <select id="filterType" name="type">
            <option value="">All Games</option>
            <option value="genre" <%= locals.filterType === 'genre' ? 'selected' : '' %>>Genre</option>
            <option value="platform" <%= locals.filterType === 'platform' ? 'selected' : '' %>>Platform</option>
            <option value="developer" <%= locals.filterType === 'developer' ? 'selected' : '' %>>Developer</option>
            <option value="publisher" <%= locals.filterType === 'publisher' ? 'selected' : '' %>>Publisher</option>
            <option value="series" <%= locals.filterType === 'series' ? 'selected' : '' %>>Series</option>
            <option value="esrb" <%= locals.filterType === 'esrb' ? 'selected' : '' %>>ESRB Rating</option>
        </select>
        
        <select id="filterValue" name="value" disabled>
            <option value="">Select Filter Type First</option>
        </select>

        <button type="submit">Apply Filter</button>
    </form>
</div>