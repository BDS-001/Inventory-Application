<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>
    <div class="games-container">
        <% games.forEach(function(game) { %>
            <div class="game">
                <h2><%= game.title %></h2>
                <div class="game-info"><strong>Description:</strong> <%= game.description %></div>
                <div class="game-info"><strong>Main Release Date:</strong> <%= new Date(game.main_release_date).toLocaleDateString() %></div>
                <div class="game-info"><strong>Developer:</strong> <%= game.developer %></div>
                <div class="game-info"><strong>Publisher:</strong> <%= game.publisher %></div>
                <div class="game-info"><strong>Series:</strong> <%= game.series %></div>
                <div class="game-info"><strong>ESRB Rating:</strong> <%= game.esrb_rating %></div>
                <div class="game-info"><strong>Genres:</strong> <%= game.genres %></div>
                <div class="game-info"><strong>All Platforms:</strong> <%= game.all_platforms %></div>
                <div class="action-buttons">
                    <form action="/deleteGame/<%= game.game_id %>" method="POST" class="delete-form">
                        <button type="submit" class="delete-btn">Delete Game</button>
                    </form>
                    <form action="/editGame/<%= game.game_id %>" method="GET" class="edit-form">
                        <button type="submit" class="edit-btn">Edit Game</button>
                    </form>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>